<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.spender">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera" />
    <uses-permission android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme"
        tools:replace="android:icon">
        <activity android:name=".HistoryActivity"></activity>
        <activity
            android:name=".activities.LoginActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.TagListActivity" />
        <activity android:name=".activities.TagChoiceActivity" />
        <activity
            android:name=".activities.NewTagActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.CheckShowActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.ListActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ScanActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>